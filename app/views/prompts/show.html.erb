<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-start">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @prompt.title %></h1>
      <% if @prompt.description.present? %>
        <p class="mt-2 text-gray-600"><%= @prompt.description %></p>
      <% end %>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_prompt_path(@prompt), class: "bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
      <%= link_to "Back", prompts_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded-md text-sm font-medium" %>
    </div>
  </div>

  <div class="grid gap-6 lg:grid-cols-2">
    <!-- Prompt Content -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Prompt Content</h2>
      <div class="bg-gray-50 rounded-md p-4">
        <pre class="whitespace-pre-wrap text-sm text-gray-800"><%= @prompt.content %></pre>
      </div>
      
      <% variables = @prompt.extract_variables %>
      <% if variables.any? %>
        <div class="mt-4">
          <h3 class="text-sm font-medium text-gray-900 mb-2">Variables</h3>
          <div class="flex flex-wrap gap-2">
            <% variables.each do |var| %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                {{<%= var %>}}
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Generation Form -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-4">Generate Text</h2>
      
      <% variables = @prompt.extract_variables %>
      <% if variables.any? %>
        <%= form_with url: generate_prompt_path(@prompt), method: :post, local: true, class: "space-y-4" do |form| %>
          <% variables.each do |var| %>
            <div>
              <label for="<%= var %>" class="block text-sm font-medium text-gray-700 mb-1">
                <%= var.humanize %>
              </label>
              <%= form.text_field "input_variables[#{var}]", 
                  id: var,
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                  placeholder: "Enter #{var.humanize.downcase}" %>
            </div>
          <% end %>
          
          <div class="pt-4">
            <%= form.submit "Generate", 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      <% else %>
        <%= form_with url: generate_prompt_path(@prompt), method: :post, local: true do |form| %>
          <p class="text-sm text-gray-600 mb-4">This prompt has no variables. Click generate to create text.</p>
          <%= form.submit "Generate", 
              class: "w-full bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Recent Generations -->
  <% recent_generations = @prompt.generations.order(created_at: :desc).limit(5) %>
  <% if recent_generations.any? %>
    <div class="bg-white shadow rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-medium text-gray-900">Recent Generations</h2>
        <%= link_to "View All", generations_prompt_path(@prompt), class: "text-blue-600 hover:text-blue-700 text-sm font-medium" %>
      </div>
      
      <div class="space-y-4">
        <% recent_generations.each do |generation| %>
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex justify-between items-start mb-2">
              <div class="text-sm text-gray-500">
                <%= generation.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
              <%= link_to "View", generation_path(generation), class: "text-blue-600 hover:text-blue-700 text-sm" %>
            </div>
            <div class="bg-gray-50 rounded p-3">
              <p class="text-sm text-gray-800 line-clamp-3">
                <%= truncate(generation.generated_text, length: 200) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
