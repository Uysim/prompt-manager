<% if thinking_process.present? %>
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mt-4">
    <h3 class="text-lg font-medium text-blue-900 mb-3">Thinking Process</h3>
    <div class="space-y-3">
      <% thinking_process.each do |thought| %>
        <div class="bg-white border border-blue-200 rounded p-3">
          <div class="flex mb-2 justify-between">
            <span class="ml-2 text-sm text-blue-600 font-medium">
              Thought <%= thought['number'] %>
            </span>
            <span class="ml-auto text-xs text-gray-500">
              <%= thought['timestamp'] %>
            </span>
          </div>
          <div class="text-sm text-gray-700 leading-relaxed">
            <%= simple_format(thought['content']) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 