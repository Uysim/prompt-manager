<div id="generation_result" class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-medium text-gray-900">Generation Result</h3>
    <div class="flex items-center space-x-2">
      <% if generation.metadata&.dig('used_sequential_thinking') %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
          Sequential Thinking
        </span>
      <% end %>
      <span class="text-sm text-gray-500">
        <%= generation.created_at.strftime("%B %d, %Y at %H:%M") %>
      </span>
    </div>
  </div>

  <!-- Generated Text -->
  <div class="mb-4">
    <h4 class="text-sm font-medium text-gray-700 mb-2">Generated Text:</h4>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
      <div class="text-gray-900 whitespace-pre-wrap leading-relaxed">
        <%= simple_format(generation.generated_text) %>
      </div>
    </div>
  </div>

  <!-- Input Variables -->
  <% if generation.input_data.present? %>
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-700 mb-2">Input Variables:</h4>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <% generation.input_data.each do |key, value| %>
          <div class="mb-2 last:mb-0">
            <span class="text-sm font-medium text-gray-600"><%= key.humanize %>:</span>
            <span class="text-sm text-gray-900 ml-2"><%= value %></span>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Model Info -->
  <div class="mb-4">
    <h4 class="text-sm font-medium text-gray-700 mb-2">Model Information:</h4>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div>
          <span class="text-gray-600">Provider:</span>
          <span class="text-gray-900 ml-2"><%= generation.llm_provider.humanize %></span>
        </div>
        <div>
          <span class="text-gray-600">Model:</span>
          <span class="text-gray-900 ml-2"><%= generation.llm_model %></span>
        </div>
      </div>
    </div>
  </div>

  <%# <!-- Thinking Process -->
  <%= render 'thinking_process', thinking_process: thinking_process if thinking_process.present? %> %>

  <!-- Enhanced Prompt (for Sequential Thinking) -->
  <% if generation.metadata&.dig('enhanced_prompt').present? %>
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-700 mb-2">Enhanced Prompt:</h4>
      <p class="text-xs text-gray-500 mb-2">
        This prompt was enhanced using the sequential thinking process to generate the final text.
      </p>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
        <pre class="whitespace-pre-wrap text-xs text-gray-800"><%= generation.metadata['enhanced_prompt'] %></pre>
      </div>
    </div>
  <% end %>

  <!-- Actions -->
  <div class="flex justify-end space-x-3 pt-4 border-t border-gray-200">
    <%= link_to "View Details", prompt_generation_path(generation.prompt, generation), 
        class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
    <%= link_to "Delete", prompt_generation_path(generation.prompt, generation), 
        method: :delete, 
        data: { confirm: "Are you sure?" },
        class: "text-red-600 hover:text-red-800 text-sm font-medium" %>
  </div>
</div> 